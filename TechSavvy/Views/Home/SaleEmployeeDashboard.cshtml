<style>
    .container {
        /*background: url('~/background.jpg');*/
        background-size: auto;
    }



    #icon {
        margin-top: 20px;
        font-size: 50px;
        color: Green;
    }


        #icon:hover {
            color: Blue;
            font-size: 60px;
        }

    .card {
        margin-bottom: 25px;
    }

</style>



<h1 style="text-align:center"> SALES EMPLOYEE DASHBOARD</h1>
<hr />



<body style="background-color: white">
    <section>
        <div class="row">

            <div class="col-lg-4">
                <div class="card" style="height:200px">

                    <div class="card-body" title="View Quotes">
                        <h2 style="text-align:center">Quotes</h2>
                        <a asp-area="" asp-controller="Meeting" asp-action="Index">
                            <div style="text-align:center">
                                <i class="fa-regular fa-receipt"></i>
                            </div>
                        </a>

                    </div>

                </div>
            </div>

            <div class="col-lg-4">
                <div class="card" style="height:200px">

                    <div class="card-body" title="Manage Orders">
                        <h2 style="text-align:center">Orders</h2>
                        <a asp-area="" asp-controller="Sponsor" asp-action="MyEvents">
                            <div style="text-align:center">
                                <i class="fa-solid fa-money-bill-1-wave"></i>
                            </div>
                        </a>

                    </div>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="card" style="height:200px">

                    <div class="card-body" title="Manage Customers">
                        <h2 style="text-align:center">Customers</h2>
                        <a asp-area="" asp-controller="Sponsor" asp-action="ProgressReport">
                            <div style="text-align:center">
                                <i id="icon" class="fa-solid fa-bars-progress"></i>
                            </div>
                        </a>

                    </div>

                </div>
            </div>

            <div class="col-lg-4">
                <div class="card" style="height:200px">

                    <div class="card-body" title="Manage Suppliers">
                        <h2 style="text-align:center">Suppliers</h2>
                        <a asp-area="" asp-controller="Suppliers" asp-action="Index">
                            <div style="text-align:center">
                                <i class="fa-solid fa-truck-droplet"></i>
                            </div>
                        </a>
                    </div>

                </div>
            </div>

            <div class="col-lg-4">
                <div class="card" style="height:200px">

                    <div class="card-body" title="Manage Products">
                        <h2 style="text-align:center">Products</h2>
                        <a asp-area="" asp-controller="Product" asp-action="Index">
                            <div style="text-align:center">
                                <i class="fa-brands fa-product-hunt"></i>
                            </div>
                        </a>

                    </div>

                </div>
            </div>


        </div>

    </section>

</body>