                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    ViewBag.Message = "You currently do not have any recods";
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                           @* <td>
                                @Html.DisplayFor(modelItem => item.Products.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.requestDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PRStatus)
                            </td>

                            <td>

                                
                                <a asp-action="Edit" class=" btn btn-warning " asp-route-id="@item.RequestId">Edit</a>
                                <a asp-action="Delete" class=" btn btn-danger " asp-route-id="@item.RequestId">Delete</a>

                            </td>
                        </tr>
                    }


                }

            </tbody>
        </table>




    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
