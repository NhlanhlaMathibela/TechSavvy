@model TechSavvy.Models.Supplier

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Suppliers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<legend class="bg bg-info text-center rounded-pill">Create New Supplier</legend>
<body>
    
    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="border p-3">
            
            <div class="row">
                <div class="col-12">
                    <div class="form-group row form-floating">
                        <div class="col-4">
                            <label asp-for="SupplierName" ></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="Email" ></label>
                        </div>

                    </div>
                    <div class="form-group row form-floating">
                        <div class="col-4">
                            <input asp-for="SupplierName" type="text"  class="form-control" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <input asp-for="Email"  type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                    
                   
                    <br /><br />
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Save" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" asp-controller="Suppliers" class="btn btn-secondary w-75">Go To List</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </form>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>