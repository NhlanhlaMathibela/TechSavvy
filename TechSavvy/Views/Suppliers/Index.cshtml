@model IEnumerable<TechSavvy.Models.Supplier>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Suppliers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<br />
<legend class="bg bg-info text-center rounded-pill">List Of Suppliers</legend>
<hr />
<body>
    <div class="container p-3">

        <div class="form-group row pt-4">
            <div class="col-6 text-right">
                <div class="col-6 text-right">
                    <a asp-action="Create" asp-controller="Suppliers" class="btn btn-primary">Add New Suppliers</a>
                </div>
            </div>
        </div><br />
        @if (TempData["AlertMessage"] != null)
        {

            <div class="alert alert-success">
                <strong>Success!</strong> @TempData["AlertMessage"]
            </div>
        }

        <br />


        <table class="table">
            <thead>
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    ViewBag.Message = "You currently do not have any recods";
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            
                            <td>

                                <a asp-action="Details" class=" btn btn-warning " asp-route-id="@item.SupplierId">Edit</a>

                                <a asp-action="Details" class=" btn btn-secondary " asp-route-id="@item.SupplierId">Supplier Details</a>
                                <a asp-action="Details" class=" btn btn-danger " asp-route-id="@item.SupplierId">Delete</a>

                            </td>
                        </tr>
                    }


                }

            </tbody>
        </table>




    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" ></script>
</body>
</html>
