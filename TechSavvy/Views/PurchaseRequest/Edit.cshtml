@model TechSavvy.Models.Purchase_Request

@{
    ViewData["Title"] = "Edit";
}

<for method="post" asp-action="Edit">
    <div class="container">
        <h2 class="bg bg-info text-center rounded-pill">
            Update Purchase Request
        </h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row form-floating">
                <div class="col-4">
                    <label asp-for="requestDate"></label>
                </div>

            </div>
            <div class="form-group row form-floating">
                <div class="col-4">
                    <input asp-for="requestDate" class="form-control" />
                    <span asp-validation-for="requestDate" class="text-danger"></span>
                </div>

            </div><br /><br />
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="hidden" asp-for="RequestId" />
                        <input type="submit" class="btn btn-info w-75" value="Save Changes" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" asp-controller="PurchaseRequest" class="btn btn-secondary w-75" value="Save Changes">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
        
        
    
    </div>



</for>
